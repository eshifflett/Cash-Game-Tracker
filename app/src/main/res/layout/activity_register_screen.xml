<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreenActivity">

    <ImageView
        android:id="@+id/regLogoImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".375"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/login_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/regFirstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/firstname_edittext_hint"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/regLogoImageView"
        app:layout_constraintLeft_toLeftOf="@id/regLogoImageView"/>

    <EditText
        android:id="@+id/firstNameRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/regFirstNameTextView"
        app:layout_constraintTop_toBottomOf="@id/regFirstNameTextView"/>

    <TextView
        android:id="@+id/regLastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lastname_edittext_hint"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/firstNameRegisterEditText"
        app:layout_constraintLeft_toLeftOf="@id/firstNameRegisterEditText"/>

    <EditText
        android:id="@+id/lastNameRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/regLastNameTextView"
        app:layout_constraintTop_toBottomOf="@id/regLastNameTextView"/>

    <TextView
        android:id="@+id/regEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_edittext_hint"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/lastNameRegisterEditText"
        app:layout_constraintLeft_toLeftOf="@id/lastNameRegisterEditText"/>

    <EditText
        android:id="@+id/emailRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/regEmailTextView"
        app:layout_constraintTop_toBottomOf="@id/regEmailTextView"/>

    <TextView
        android:id="@+id/regPasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_edittext_hint"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/emailRegisterEditText"
        app:layout_constraintLeft_toLeftOf="@id/emailRegisterEditText"/>

    <EditText
        android:id="@+id/passwordRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/regPasswordTextView"
        app:layout_constraintTop_toBottomOf="@id/regPasswordTextView"/>

    <TextView
        android:id="@+id/regRePasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repassword_edittext_hint"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/passwordRegisterEditText"
        app:layout_constraintLeft_toLeftOf="@id/passwordRegisterEditText"/>

    <EditText
        android:id="@+id/repasswordRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/regRePasswordTextView"
        app:layout_constraintTop_toBottomOf="@id/regRePasswordTextView"/>

    <Button
        android:id="@+id/registerRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".10"
        android:text="@string/register_button_hint"
        android:onClick="onRegisterRegisterPress"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/repasswordRegisterEditText"
        app:layout_constraintTop_toBottomOf="@id/repasswordRegisterEditText"/>

</androidx.constraintlayout.widget.ConstraintLayout>